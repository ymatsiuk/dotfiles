URxvt*scrollBar: false

URxvt.perl-ext-common: tabbed,default,selection-to-clipboard,matcher
URxvt.clipboard.autocopy: true
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 0

! -- Disable auto scroll -- !
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true


!-- Xft settings -- !
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xft.dpi: 96

! -- Fonts -- !
!URxvt.letterSpace: -1
URxvt.font: 	xft: xos4 Terminus:size=11
URxvt.boldFont: xft: xos4 Terminus:style=Bold:size=11

*color0:  #2E3436
*color1:  #a40000
*color2:  #4E9A06
*color3:  #C4A000
*color4:  #3465A4
*color5:  #75507B
*color6:  #ce5c00
*color7:  #babdb9
*color8:  #555753
*color9:  #EF2929
*color10: #8AE234
*color11: #FCE94F
*color12: #729FCF
*color13: #AD7FA8
*color14: #fcaf3e
*color15: #EEEEEC

urxvt*depth: 32
urxvt*background: [85]#2f343f
urxvt*foreground: [100]#FFFFFF
